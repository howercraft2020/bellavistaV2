<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaveTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bavePrimaryColor</item>
        <item name="colorPrimaryDark">@color/bavePrimaryDarkColor</item>
        <item name="colorAccent">@color/baveSecondaryDarkColor</item>
        <item name="android:textColor">@color/bavePrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/baveSecondaryTextColor</item>
    </style>

    <style name="BaveTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SalcoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SalcoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaveTheme.CustomHintDisabled">
        <item name="android:textColor">@color/baveSecondaryTextColor</item>
    </style>
</resources>