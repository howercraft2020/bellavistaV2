<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:src="@drawable/inventario04_48dp" />

    <TextView
        android:id="@+id/TagTraspaso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:text="NÂº Traspaso : "
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="3dp"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/transctionReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transactionReference"
        android:layout_toRightOf="@id/TagTraspaso"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="3dp"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/tagGlosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:text="Glosa : "
        android:layout_below="@id/TagTraspaso"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="3dp"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/transactionSourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transctionReference"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/tagGlosa"
        android:text="transactionSourceName "
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignBottom="@id/transactionSourceName" />

</RelativeLayout>