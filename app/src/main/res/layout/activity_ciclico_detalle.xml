<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ActivityCiclicoDetalle">

    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/progress_bar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ciclico01_48dp" />

        <TextView
            android:id="@+id/labelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:textStyle="bold"
            android:text="ID:" />

        <TextView
            android:id="@+id/cycleCountHeaderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelId"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/labelId"
            android:textStyle="bold"
            android:text="Nombre:" />

        <TextView
            android:id="@+id/cycleCountHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelNombre"
            android:layout_below="@+id/cycleCountHeaderId"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/labelFechaCreacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/labelNombre"
            android:textStyle="bold"
            android:text="Fecha de creaciÃ³n:" />

        <TextView
            android:id="@+id/creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cycleCountHeaderName"
            android:layout_toRightOf="@+id/labelFechaCreacion"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/labelFechaCreacion"
            android:background="?android:attr/listDivider" />


    </RelativeLayout>

    <SearchView
        android:id="@+id/busquedaSigle"
        android:layout_width="378dp"
        android:layout_height="28dp"
        android:layout_below="@+id/divider"
        android:background="#A3FDEAEA"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemCiclicoDetalleRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>