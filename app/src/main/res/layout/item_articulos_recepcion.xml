<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:src="@drawable/ciclico01_48dp" />

    <TextView
        android:id="@+id/TagcodigoSigle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:textStyle="bold"
        android:text="Codigo Sigle : " />

    <TextView
        android:id="@+id/codigoSigle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TagcodigoSigle"
        android:paddingLeft="10dp"
        android:text="ID" />

    <TextView
        android:id="@+id/Tagcantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@id/TagcodigoSigle"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:text="Cantidad : " />

    <TextView
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Tagcantidad"
        android:layout_below="@id/codigoSigle"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:text="Cantidad" />

    <TextView
        android:id="@+id/Tagudm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@id/Tagcantidad"
        android:text="UDM : "
        android:textStyle="bold"
        android:paddingBottom="10dp"/>


    <TextView
        android:id="@+id/udm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tagcantidad"
        android:layout_toRightOf="@+id/Tagudm"
        android:layout_marginTop="0dp"
        android:text="UDM"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignBottom="@id/udm" />

</RelativeLayout>