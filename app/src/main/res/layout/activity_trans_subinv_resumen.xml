<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:id="@+id/rlayoutItem">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/inventario05_48dp" />

        <TextView
            android:id="@+id/textProductoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="textProductoDescription" />

        <TextView
            android:id="@+id/labelProductoSigle"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textProductoDescription"
            android:layout_toRightOf="@+id/icon"
            android:textStyle="bold"
            android:text="SIGLE:" />

        <TextView
            android:id="@+id/textProductoSigle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textProductoDescription"
            android:layout_toRightOf="@+id/labelProductoSigle"
            android:paddingLeft="10dp"
            android:text="textShipmentHeaderId" />

        <TextView
            android:id="@+id/labelProductoCantidad"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/labelProductoSigle"
            android:textStyle="bold"
            android:text="Cantidad:" />

        <TextView
            android:id="@+id/textProductoCantidad"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelProductoSigle"
            android:layout_toRightOf="@+id/labelProductoCantidad"
            android:paddingLeft="5dp"
            android:text="1000"  />


        <TextView
            android:id="@+id/labelProductoLote"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/labelProductoCantidad"
            android:textStyle="bold"
            android:text="Lote:"/>

        <TextView
            android:id="@+id/textProductoLote"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelProductoCantidad"
            android:layout_toRightOf="@+id/labelProductoLote"
            android:paddingLeft="5dp"
            android:text="SI"  />

        <TextView
            android:id="@+id/labelProductoSerie"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textProductoLote"
            android:layout_below="@+id/labelProductoCantidad"
            android:textStyle="bold"
            android:text="Serie:" />

        <TextView
            android:id="@+id/textProductoSerie"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelProductoCantidad"
            android:layout_toRightOf="@+id/labelProductoSerie"
            android:paddingLeft="5dp"
            android:text="NO"  />

        <TextView
            android:id="@+id/labelSubinventoryCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelProductoSerie"
            android:textStyle="bold"
            android:text="Subinventario:"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textSubinventoryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelProductoSerie"
            android:layout_toRightOf="@+id/labelSubinventoryCode"
            android:paddingLeft="10dp"
            android:text="textSubinventoryCode"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/labelLocatorCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelSubinventoryCode"
            android:textStyle="bold"
            android:text="Localizador:"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textLocatorCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelSubinventoryCode"
            android:layout_toRightOf="@+id/labelLocatorCode"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="textLocatorCode"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryDark"
            android:layout_alignBottom="@id/labelLocatorCode"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:id="@+id/rlayoutLote">

        <TextView
            android:id="@+id/labelLote"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lote:"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textLote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelLote"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="textLote"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryDark"
            android:layout_alignBottom="@id/textLote"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:id="@+id/rlayoutSeries">

        <TextView
            android:id="@+id/labelSeries"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Series:"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelSeries"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="textSeries"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryDark"
            android:layout_alignBottom="@id/labelSeries"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:id="@+id/rlayoutDestino">

        <TextView
            android:id="@+id/labelDestSubinventoryCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Subinventario Dest:"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textDestSubinventoryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelDestSubinventoryCode"
            android:paddingLeft="10dp"
            android:text="textSubinventoryCode"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/labelDestLocatorCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelDestSubinventoryCode"
            android:textStyle="bold"
            android:text="Localizador Dest:"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textDestLocatorCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelDestSubinventoryCode"
            android:layout_toRightOf="@+id/labelDestLocatorCode"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="textLocatorCode"
            />

    </RelativeLayout>


</LinearLayout>