<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dip">

    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/progress_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TagNumeroTraspaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº Traspaso :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="3dp"
            android:paddingLeft="3dp" />

        <TextView
            android:id="@+id/numeroTraspasoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/TagNumeroTraspaso"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="nroTraspaso"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TagGlosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TagNumeroTraspaso"
            android:text="Glosa : "
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="3dp"
            android:paddingLeft="3dp" />

        <TextView
            android:id="@+id/glosaEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numeroTraspasoEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/TagGlosa"
            android:text="glosa"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TagcodigoSigle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TagGlosa"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="Nº Sigle : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codigoSigleEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glosaEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/TagcodigoSigle"
            android:text="codigoSigle "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagSubinventarioDesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TagcodigoSigle"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="Subinv. Desde : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subinventarioDesdeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/codigoSigleEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tagSubinventarioDesde"
            android:text="subinvdesde"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tagLocalizadorDesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagSubinventarioDesde"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="Localizador Desde : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/localizadorDesdeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subinventarioDesdeEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tagLocalizadorDesde"
            android:text="localizadorDesde"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagNrolote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagLocalizadorDesde"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="Nº Lote : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nroLoteEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/localizadorDesdeEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tagNrolote"
            android:text="numeroLote"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagNrolote"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="Cantidad : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cantidadEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nroLoteEditText"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tagCantidad"
            android:text="cantidad"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignBottom="@id/creationDate" />

    <EditText
        android:id="@+id/subinvHastaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:layout_below="@id/glosaEditText"
        android:hint="Subinv. Hasta"
        android:inputType="textPersonName"
        android:padding="6dp" />
    <EditText
        android:id="@+id/localizadorHastaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subinvHastaEditText"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:hint="Localizador Hasta"
        android:inputType="textPersonName" />



</LinearLayout>